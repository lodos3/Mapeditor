<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Mir2.Editor.ViewModels"
        x:Class="Mir2.Editor.Views.SetLightDialog"
        Title="Set Light Properties"
        Width="350" Height="200"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
  
  <Design.DataContext>
    <vm:SetLightDialogViewModel />
  </Design.DataContext>

  <Grid Margin="20" x:DataType="vm:SetLightDialogViewModel">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    
    <TextBlock Grid.Row="0" Text="Set light properties:" 
               Margin="0,0,0,15" HorizontalAlignment="Center"/>
    
    <Grid Grid.Row="1" Margin="0,5">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <TextBlock Grid.Column="0" Text="Light Level:" VerticalAlignment="Center" Margin="0,0,10,0"/>
      <TextBox Grid.Column="1" Name="txtLight" Text="{Binding Light}" 
               Watermark="0-255 (100-119 = fishing zones)"/>
    </Grid>
    
    <TextBlock Grid.Row="2" Text="Light levels: 0 = no light, 1-99 = light levels, 100-119 = fishing zones"
               TextWrapping="Wrap" VerticalAlignment="Center" 
               FontSize="10" Foreground="Gray" Margin="0,10"/>

    <StackPanel Grid.Row="3" Orientation="Horizontal" 
                HorizontalAlignment="Right" Margin="0,20,0,0">
      <Button Name="btnOK" Content="Set" Width="80" Margin="0,0,10,0"
              Command="{Binding SetCommand}" IsDefault="True"/>
      <Button Name="btnCancel" Content="Cancel" Width="80" 
              Command="{Binding CancelCommand}" IsCancel="True"/>
    </StackPanel>
  </Grid>
</Window>